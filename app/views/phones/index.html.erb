<% title "Phones" %>

<table>
  <tr>
    <th>Type</th>
    <th>Number</th>
  </tr>
  <% for phone in @phones %>
    <tr>
      <td><%=h phone.type %></td>
      <td><%=h phone.number %></td>
      <td><%= link_to "Show", phone %></td>
      <td><%= link_to "Edit", edit_phone_path(phone) %></td>
      <td><%= link_to "Destroy", phone, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Phone", new_phone_path %></p>
